<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>com.microsoft.excel</groupId>
  <artifactId>xllsdk</artifactId>
  <version>2013</version>
  <packaging>native-static</packaging>

  <name>JNI Development Kit</name>
  <description>Header files and libraries for using native code with Java</description>

  <licenses>
    <license>
      <name>Oracle Binary Code License Agreement for the Java SE Platform Products and JavaFX</name>
      <url>http://java.sun/license</url>
    </license>
  </licenses>

  <properties>
    <maven-native-packing.version>0.2.1-SNAPSHOT</maven-native-packing.version>
    <excelsdk.path>C:\${project.version} Office System Developer Resources\Excel${project.version}XLLSDK</excelsdk.path>
    <excelsdk.x64.lib.path>${excelsdk.path}\lib\x64</excelsdk.x64.lib.path>
  </properties>

  <build>
    <plugins>
      <plugin>
        <groupId>uk.co.beerdragon</groupId>
        <artifactId>maven-native-packaging</artifactId>
        <version>${maven-native-packing.version}</version>
        <extensions>true</extensions>
        <configuration>
          <defaults>windows</defaults>
        </configuration>
        <executions>
          <execution>
            <id>default-build</id>
            <configuration>
              <skip>true</skip>
            </configuration>
          </execution>
          <execution>
            <id>default-package-static</id>
            <configuration>
              <sources>
                <source>
                  <path>${excelsdk.path}</path>
                  <pattern>ExcelSDK_eula.rtf</pattern>
                </source>
                <source>
                  <path>${excelsdk.path}\SRC</path>
                  <pattern>ReadMe.txt</pattern>
                </source>
                <source>
                  <path>${excelsdk.path}\SRC</path>
                  <pattern>XLCALL.cpp</pattern>
                </source>
              </sources>
              <staticLibs>
                <staticLib>
                  <arch>i386</arch>
                  <path>${excelsdk.path}/LIB</path>
                  <pattern>*.LIB</pattern>
                  <headers>
                    <header>
                      <path>${excelsdk.path}/INCLUDE</path>
                      <pattern>*.H</pattern>
                    </header>
                  </headers>
                </staticLib>
                <staticLib>
                  <arch>x64</arch>
                  <path>${excelsdk.x64.lib.path}</path>
                  <pattern>*.LIB</pattern>
                  <headers/>
                </staticLib>
              </staticLibs>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>
